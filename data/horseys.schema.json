{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer"
    },
    "additionalProperties": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "scene": {
          "type": "string"
        },
        "stats": {
          "type": "object",
          "properties": {
            "speed": {
              "type": "number"
            },
            "wit": {
              "type": "number"
            }
          },
          "required": ["speed", "wit"]
        },
        "skills": {
          "type": "array",
          "items": [
            {
              "type": "string"
            }
          ]
        }
      },
      "required": ["id", "name", "stats", "skills", "scene"]
    }
  },
  "required": ["version"]
}
